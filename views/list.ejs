<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">

    <% newListItems.forEach((e)=> { %>
      <form action="/delete" method="post">
       <div class="item">
         <input type="checkbox" onChange="this.form.submit()" name="checkbox" value= '<%= e.name %>'>
         <p><%=  e.name  %></p>
       </div>
       <input type="hidden" name="hidden" value="<%= listTitle %>">
       <input type="hidden" name="hiddenId" value="<%= e._id %>">
      </form>
    <% }); %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" value= "<%= listTitle %>" name="list">+</button>
      </form>
  </div>

<%- include("footer") -%>
